<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://images.unsplash.com/photo-1414235077428-338989a2e8c0?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1500&q=80)">
  Restaurants
</div>

<div class="container">
  <div class="cards">
  <%@restaurants.each do |restaurant|%>
    <div class="card-product">
        <%= link_to restaurant_path(restaurant) do %>
          <img src="https://source.unsplash.com/1600x900/?restaurant,food" />
        <% end %>
      <div class="card-product-infos">
         <h2><%= link_to restaurant.name.upcase, restaurant_path(restaurant) %></h2>
        <p> <%= link_to 'Leave a review', new_restaurant_review_path(restaurant) %></p>
      </div>
    </div>


  <% end %>
  </div>
</div>

<%= link_to 'Add a new restaurant', new_restaurant_path %>

